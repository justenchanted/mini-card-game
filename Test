<!DOCTYPE html>
<html>
<head>
    <title>Mini Card Game</title>
</head>
<body>
<canvas id="gameCanvas" width="800" height="600" style="border:1px solid black;"></canvas>

<script>
const canvas = document.getElementById('gameCanvas');
const ctx = canvas.getContext('2d');

let cards = [
    'https://github.com/YOURUSERNAME/mini-card-game/blob/main/card1.png?raw=true',
    'https://github.com/YOURUSERNAME/mini-card-game/blob/main/card2.png?raw=true'
];

let currentCard = 0;

// Load first card
const img = new Image();
img.src = cards[currentCard];
img.onload = drawCard;

function drawCard() {
    // Clear canvas
    ctx.fillStyle = 'lightblue';
    ctx.fillRect(0, 0, canvas.width, canvas.height);

    // Draw card
    ctx.drawImage(img, 300, 200, 200, 150);
}

// Flip card on click
canvas.addEventListener('click', () => {
    currentCard = (currentCard + 1) % cards.length; // go to next card
    img.src = cards[currentCard]; // load new image
});
</script>
</body>
</html>
